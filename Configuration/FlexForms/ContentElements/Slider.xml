<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <ROOT>
        <type>array</type>
        <el>
            <slider>
                <section>1</section>
                <type>array</type>
                <el>
                    <slide>
                        <title>Slide</title>
                        <type>array</type>
                        <el>
                            <caption.text>
                                <TCEforms>
                                    <label>Caption Text</label>
                                    <config>
                                        <type>text</type>
                                        <cols>30</cols>
                                        <rows>5</rows>
                                        <enableRichtext>1</enableRichtext>
                                    </config>
                                    <defaultExtras>richtext[*]:rte_transform[mode=ts_css]</defaultExtras>
                                </TCEforms>
                            </caption.text>
                            <caption.left>
                                <TCEforms>
                                    <label>Caption Position (x)</label>
                                    <config>
                                        <type>input</type>
                                        <size>10</size>
                                    </config>
                                </TCEforms>
                            </caption.left>
                            <caption.top>
                                <TCEforms>
                                    <label>Caption Position (y)</label>
                                    <config>
                                        <type>input</type>
                                        <size>10</size>
                                    </config>
                                </TCEforms>
                            </caption.top>
                            <link>
                                <TCEforms>
                                    <label>Link</label>
                                    <config>
                                        <type>input</type>
                                        <renderType>inputLink</renderType>
                                        <size>30</size>
                                        <eval>trim</eval>
                                        <softref>typolink,typolink_tag,images,url</softref>
                                    </config>
                                </TCEforms>
                            </link>
                            <image>
                                <TCEforms>
                                    <label>Bild</label>
                                    <config>
                                        <type>group</type>
                                        <internal_type>file</internal_type>
                                        <allowed>jpg,jpeg,png,gif</allowed>
                                        <size>1</size>
                                        <minitems>0</minitems>
                                        <maxitems>1</maxitems>
                                        <show_thumbs>1</show_thumbs>
                                    </config>
                                </TCEforms>
                            </image>
                        </el>
                    </slide>
                </el>
            </slider>
        </el>
    </ROOT>
</T3DataStructure>